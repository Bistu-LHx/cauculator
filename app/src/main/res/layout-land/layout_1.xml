<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="vertical">

        <TextView
            android:id="@+id/result_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            style="@style/TextAreaStyle"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="6.5dp"
            android:background="#000000"/>
        <TextView
            android:id="@+id/formula_area"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/TextAreaStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FF00FF00"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#d468cb">
            <TableRow android:layout_weight="1"
                android:background="#57ccf7">
                <Button
                    android:id="@+id/button_c"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/button_CircleLeft"
                    android:onClick="onClick"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:text="("
                    android:textSize="25sp"/>
                <Button
                    android:id="@+id/button_CircleRight"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text=")"
                    android:textSize="25sp"/>
            </TableRow>
            <TableRow android:layout_weight="1"
                android:background="#e7e12b">

            </TableRow>
            <TableRow android:layout_weight="1"
                android:background="#e7e12b">

            </TableRow>
            <TableRow android:layout_weight="1"
                android:background="#1de473">
                <Button
                    android:id="@+id/button_7"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="25sp"/>
                <Button
                    android:id="@+id/button_8"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="25sp"/>
                <Button
                    android:id="@+id/button_9"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="25sp"/>
            </TableRow>
            <TableRow android:layout_weight="1"
                android:background="#e07ee6">
                <Button
                    android:id="@+id/button_4"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="25sp"/>
                <Button
                    android:id="@+id/button_5"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="25sp"/>
                <Button
                    android:id="@+id/button_6"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="25sp"/>
            </TableRow>
            <TableRow android:layout_weight="1"
                android:background="#ef3426">
                <Button
                    android:id="@+id/button_1"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="25sp"/>
                <Button
                    android:id="@+id/button_2"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="25sp"/>
                <Button
                    android:id="@+id/button_3"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="25sp"/>
            </TableRow>
            <TableRow android:layout_weight="1"
                android:background="#ce6e0e">
                <Button
                    android:id="@+id/button_0"
                    android:onClick="onClick"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="25sp"/>
                <Button
                    android:id="@+id/button_dot"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textSize="25sp"/>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#edb15c"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_DEC"
                android:onClick="onClick"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="DEC"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/button_div"
                android:onClick="onClick"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="/"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/button_mul"
                android:onClick="onClick"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="*"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/button_sub"
                android:onClick="onClick"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="-"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/button_add"
                android:onClick="onClick"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="+"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/button_equ"
                android:onClick="onClick"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="="
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>